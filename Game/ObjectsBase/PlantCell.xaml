<UserControl x:Class="Game.ObjectsBase.PlantCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.ObjectsBase"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="75">
    <Canvas>
        <Rectangle x:Name="plantCell" Width="75" Height="100" Fill="GreenYellow" Stroke="Black" StrokeThickness="2" MouseDown="PlantCell_MouseDown" />
        <Image x:Name="plantImage" Stretch="Uniform" Width="75" Height="100"/>
    </Canvas>
</UserControl>
